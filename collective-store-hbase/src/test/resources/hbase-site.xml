<configuration>

<property>
<name>hbase.rootdir</name>
<value>hdfs://cluster/hbase</value>
</property>

<property>
<name>dfs.client.failover.proxy.provider.cluster</name>
<value>org.apache.hadoop.hdfs.server.namenode.ha.ConfiguredFailoverProxyProvider</value>
</property>

<property>
<name>hbase.cluster.distributed</name>
<value>true</value>
</property>

<property>
<name>hbase.zookeeper.quorum</name>
<value>wchddb01txdu.dev.oclc.org,wchddb02txdu.dev.oclc.org,wchddb03txdu.dev.oclc.org</value>
</property>

<property>
<name>hbase.zookeeper.property.dataDir</name>
<value>/drive1/zookeeperData</value>
</property>

<property>
<name>hbase.regionserver.port</name>
<value>9009</value>
</property>

<property>
<name>hbase.master.port</name>
<value>9010</value>
</property>

<property>
<name>hbase.master.info.port</name>
<value>9002</value>
</property>

<property>
<name>hbase.regionserver.info.port</name>
<value>9004</value>
</property>

<property>
<name>hbase.zookeeper.property.clientPort</name>
<value>9011</value>
</property>

<property>
<name>hbase.rest.readonly</name>
<value>true</value>
</property>

<property>
<name>hbase.regionserver.handler.count</name>
<value>200</value>
</property>

<!-- These two keep regions from splitting automatically  -->
<property>
<name>hbase.regionserver.region.split.policy</name>
<value>org.apache.hadoop.hbase.regionserver.ConstantSizeRegionSplitPolicy</value>
</property>

<property>
<name>hbase.hregion.max.filesize</name>
<value>10737418240</value>
</property>
